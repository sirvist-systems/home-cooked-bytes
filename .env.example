# Copy to `.env` (never commit `.env`; it contains secrets).
#
# This file documents environment variables used across local scripts and the Docker stack.

###############################################################################
# Google / Vertex / Gemini
###############################################################################

# Vertex configuration (used by some scripts/tools)
GOOGLE_CLOUD_PROJECT="sirvist-lab"
GOOGLE_CLOUD_LOCATION="global"
GOOGLE_GENAI_USE_VERTEXAI="True"

# Option A: API-key auth (some Gemini/Vertex SDK paths)
GOOGLE_API_KEY="REPLACE_ME"

# Option B: ADC / service-account auth
GOOGLE_APPLICATION_CREDENTIALS="/home/sirvist-lab/src/home-cooked-bytes/.credentials/service-account.json"

###############################################################################
# Bifrost
###############################################################################

BIFROST_URL="http://localhost:8080"

# Bifrost Virtual Key (VK) used by local clients (LangGraph backend, scripts) via `x-bf-vk`.
# Repo convention prefers `BIFROST_API_KEY` for the VK to match existing scripts.
BIFROST_API_KEY="sk-bf-REPLACE_ME"

# Optional compatibility alias (some tools may read `BIFROST_VK` instead).
BIFROST_VK="sk-bf-REPLACE_ME"

# Default model for Bifrost-routed calls (prefer versioned ids; VK allowlists may block aliases).
BIFROST_MODEL="openai/gpt-5.2-2025-12-11"

# Server/admin auth (only if youâ€™re configuring Bifrost itself; most clients do NOT need these).
BIFROST_AUTH_SECRET="REPLACE_ME"

